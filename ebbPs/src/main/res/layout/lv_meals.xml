<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_item"
        android:background="@color/white"
        android:paddingLeft="@dimen/common_RegisteredLeft"
        android:paddingRight="@dimen/common_RegisteredLeft">

        <TextView
            android:id="@+id/order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号：20160506"
            android:textColor="@color/common_black"
            android:textSize="@dimen/common_InputBox_28px"
            android:layout_centerVertical="true"/>


        <TextView
            android:id="@+id/order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015/06/04 20:43"
            android:layout_toLeftOf="@+id/return_button"
            android:layout_marginRight="@dimen/common_RegisteredLeft"
            android:textColor="@color/common_InputBox"
            android:textSize="@dimen/common_StatisticalTop_23px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>



    </RelativeLayout>

    <View
        style="@style/The_divider"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_item"
        android:background="@color/white"
        android:paddingLeft="@dimen/common_RegisteredLeft"
        android:paddingRight="@dimen/common_RegisteredLeft">

        <TextView
            android:id="@+id/ID_dress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="急诊科04床"
            android:maxEms="8"
            android:singleLine="true"
            android:textColor="@color/crop__button_text"
            android:textSize="@dimen/common_InputBox_28px"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="@color/crop__button_text"
            android:textSize="@dimen/common_InputBox_28px"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015/06/04 20:43"
            android:layout_toLeftOf="@+id/return_button"
            android:layout_marginRight="@dimen/common_RegisteredLeft"
            android:textColor="@color/common_InputBox"
            android:textSize="@dimen/common_StatisticalTop_23px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>



    </RelativeLayout>

    <View
        style="@style/The_divider"/>
    
    <TextView
        android:id="@+id/productAndNum"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/white"
        android:text="馒头 X3          馒头 X3           馒头 X3         馒头 X3          馒头 X3"
        android:textColor="@color/crop__button_text"
        android:textSize="@dimen/common_InputBox_28px"
        android:paddingLeft="@dimen/common_RegisteredLeft"
        android:paddingRight="@dimen/common_RegisteredLeft"
        android:gravity="center_vertical"/>

</LinearLayout>