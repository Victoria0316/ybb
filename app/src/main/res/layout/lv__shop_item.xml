<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_search_item"
    android:id="@+id/main_rl"
    >

    <RelativeLayout
        android:id="@+id/ll_reserveTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


    <TextView
        android:id="@+id/tv_reserveTime"
        android:layout_width="wrap_content"
        android:text="2015"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_distance"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/pre_status"
        android:layout_width="wrap_content"
        android:text="2015"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_distance"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_marginRight="@dimen/common_distance"
        android:textColor="@color/common_red"
        />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/ll_reserveTime"
        android:id="@+id/rl_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_search_item"
        android:padding="@dimen/common_distance">

        <FrameLayout
            android:id="@+id/fl_image_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_image_bg"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:padding="5dp"
                android:src="@drawable/lv_item_image_bg" />

            <CheckBox
                android:id="@+id/iv_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/check_cart"
                android:button="@null"
                />


        </FrameLayout>

        <TextView
            android:id="@+id/tv_search_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/fl_image_bg"
            android:layout_marginLeft="@dimen/common_distance"
            android:layout_toRightOf="@id/fl_image_bg"
            android:paddingTop="@dimen/common_padding_distance"
            android:singleLine="true"
            android:text="紫薯庄园"
            android:textColor="@color/common_black"
            android:textSize="@dimen/common_InputBox_28px" />


        <TextView
            android:id="@+id/tv_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/fl_image_bg"
            android:layout_marginLeft="@dimen/common_distance"
            android:layout_toRightOf="@id/fl_image_bg"
            android:text="¥00.00"
            android:textColor="@color/common_red"
            android:textSize="@dimen/common_InputBox_28px" />


        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/fl_image_bg"
            android:layout_alignParentRight="true"
            android:text="x 3"
            android:textColor="@color/common_blue"
            android:textSize="@dimen/common_InputBox_28px" />


    </RelativeLayout>

    <Button
        android:id="@+id/btn_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shop_listiem_delete"
        android:text="删除"
        android:textColor="@color/white"
        android:textSize="@dimen/common_InputBox_28px"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/btn_del"
        android:layout_toLeftOf="@id/btn_del"
        android:paddingBottom="10dp"
        android:src="@drawable/add"
        android:visibility="gone" />

    <EditText
        android:id="@+id/et_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_add"
        android:layout_marginLeft="@dimen/common_padding_distance"
        android:layout_marginRight="@dimen/common_padding_distance"
        android:layout_toLeftOf="@id/iv_add"
        android:background="@drawable/hint"
        android:gravity="center"
        android:hint="1"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/et_hint"
        android:layout_toLeftOf="@id/et_hint"
        android:src="@drawable/minus"
        android:visibility="gone" />


</RelativeLayout>