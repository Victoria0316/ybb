<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tab_two_bg"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/rl_medical_food"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_medical_food"
                android:text="@string/s_medical_meals"
                style="@style/three_tab_tv" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_zero_meals"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" >


            <TextView
                android:id="@+id/tv_zero_meals"
                android:text="@string/s_zero_point_meal"
                android:textColor="@color/common_blue"
                style="@style/three_tab_tv" />

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
