<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        style="@style/The_divider"
        android:layout_marginTop="@dimen/common_RegisteredLeft"/>

    <RelativeLayout
        android:id="@+id/hospital_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_item"
        android:paddingLeft="@dimen/common_RegisteredLeft"
        android:paddingRight="@dimen/common_RegisteredLeft"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address_hospital"
            android:textColor="@color/common_black"
            android:textSize="@dimen/common_ListTitle_27px"/>

        <TextView
            android:id="@+id/hospital_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:maxEms="16"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/hospital_iv"
            android:layout_marginRight="@dimen/common_distance"
            android:textColor="@color/common_black"
            android:textSize="@dimen/common_ListTitle_27px"/>


        <ImageView
            android:id="@+id/hospital_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arrow"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        style="@style/The_divider"/>

    <RelativeLayout
        android:id="@+id/department_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_item"
        android:paddingLeft="@dimen/common_RegisteredLeft"
        android:paddingRight="@dimen/common_RegisteredLeft"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address_department"
            android:textColor="@color/common_black"
            android:textSize="@dimen/common_ListTitle_27px"/>

        <TextView
            android:id="@+id/department_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:maxEms="16"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/department_iv"
            android:layout_marginRight="@dimen/common_distance"
            android:textColor="@color/common_black"
            android:textSize="@dimen/common_ListTitle_27px"/>

        <ImageView
            android:id="@+id/department_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arrow"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        style="@style/The_divider"/>

    <RelativeLayout
        android:id="@+id/address_beds"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_item"
        android:paddingLeft="@dimen/common_RegisteredLeft"
        android:paddingRight="@dimen/common_RegisteredLeft"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address_beds"
            android:textColor="@color/common_black"
            android:textSize="@dimen/common_ListTitle_27px"/>

        <TextView
            android:id="@+id/address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/address_iv"
            android:singleLine="true"
            android:maxEms="16"
            android:ellipsize="end"
            android:layout_marginRight="@dimen/common_distance"
            android:textColor="@color/common_black"
            android:textSize="@dimen/common_ListTitle_27px"/>

        <ImageView
            android:id="@+id/address_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arrow"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        style="@style/The_divider"/>

    <View
        style="@style/The_divider"
        android:layout_marginTop="@dimen/common_RegisteredLeft"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_item"
        android:paddingLeft="@dimen/common_RegisteredLeft"
        android:paddingRight="@dimen/common_RegisteredLeft"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address_detailed"
            android:textColor="@color/common_black"
            android:textSize="@dimen/common_ListTitle_27px"/>

        <TextView
            android:id="@+id/address_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:textColorHint="@color/common_InputBox"
            android:textSize="@dimen/common_InputBox_28px"
            android:gravity="right"
            />

    </RelativeLayout>

    <View
        style="@style/The_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_item"
        android:paddingLeft="@dimen/common_RegisteredLeft"
        android:paddingRight="@dimen/common_RegisteredLeft"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address_name"
            android:textColor="@color/common_black"
            android:textSize="@dimen/common_ListTitle_27px"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:textColorHint="@color/common_InputBox"
            android:textSize="@dimen/common_InputBox_28px"
            android:gravity="right"
            />

    </RelativeLayout>

    <View
        style="@style/The_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_item"
        android:paddingLeft="@dimen/common_RegisteredLeft"
        android:paddingRight="@dimen/common_RegisteredLeft"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address_telephone"
            android:singleLine="true"
            android:textColor="@color/common_black"
            android:textSize="@dimen/common_ListTitle_27px"/>

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:phoneNumber="true"
            android:textColorHint="@color/common_InputBox"
            android:textSize="@dimen/common_InputBox_28px"
            android:gravity="right"
            />

    </RelativeLayout>





</LinearLayout>