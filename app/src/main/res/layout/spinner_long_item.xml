<merge xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:id="@+id/ll_wrap_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_notice_bacdground"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message_notice_type"
            android:layout_marginLeft="@dimen/common_RegisteredLeft"
            android:textColor="@color/common_black"
            android:textSize="@dimen/common_InputBox_28px"
            android:layout_centerVertical="true"/>


        <TextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/iv_arrow"
            android:textSize="@dimen/common_InputBox_28px"
            android:textColor="@color/common_InputBox"
            android:layout_centerVertical="true"/>


       <ImageView
           android:id="@+id/iv_arrow"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingLeft="5dip"
           android:src="@drawable/down_arrow"
           android:layout_marginRight="@dimen/common_RegisteredLeft"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"/>

    </RelativeLayout>



</merge>