<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/il_order_date"
        layout="@layout/lv_order_date_item"></include>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_h" />


    <com.bluemobi.ybb.view.CustomExpandableListView
        android:id="@+id/child_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:cacheColorHint="@color/transparent"
        android:divider="@null"
        android:listSelector="@color/transparent">

    </com.bluemobi.ybb.view.CustomExpandableListView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_h" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_item_bg"
        android:paddingLeft="@dimen/common_distance">

        <TextView
            android:id="@+id/tv_left"

            style="@style/order_btn_bg"
            android:layout_marginRight="@dimen/common_distance"
            android:layout_toLeftOf="@+id/tv_right"
            android:text="删除订单" />

        <TextView
            android:id="@+id/tv_right"
            style="@style/order_btn_bg"
            android:layout_alignParentRight="true"
            android:text="添加评价"


            />

    </RelativeLayout>


</LinearLayout>