<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_bg"
    android:id="@+id/group_item"
    android:orientation="vertical">



    <TextView
        android:layout_marginTop="@dimen/common_distance"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_account_alarm_group_h"
        android:background="@color/white"

        >

        <ImageView
            android:id="@+id/down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_distance"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_down" />

        <TextView
            android:id="@+id/title"
            style="@style/text_13_sp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="药定时提醒"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_distance"
            />
        <ImageView
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/plus"
            android:layout_toRightOf="@id/title"
            android:layout_marginLeft="@dimen/common_padding_distance"
            />
    </RelativeLayout>
</LinearLayout>