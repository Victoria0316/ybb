<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_search_item"
    android:padding="@dimen/common_distance">

    <ImageView
        android:id="@+id/iv_image_bg_item_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lv_item_image_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/common_padding_distance"
        android:layout_toRightOf="@id/iv_image_bg_item_2"
        android:padding="@dimen/common_padding_distance">


        <TextView
            android:id="@+id/tv_search_item_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="紫薯庄园"
            android:textColor="@color/common_black"
            android:textSize="@dimen/common_InputBox_28px" />


        <RatingBar
            android:id="@+id/rb_comment_item_2"
            style="@style/roomRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_search_item_2"
            android:layout_marginTop="@dimen/common_padding_distance"
            android:isIndicator="true" />


        <TextView
            android:id="@+id/commentCount_item_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_search_item_2"
            android:layout_marginLeft="@dimen/common_padding_distance"
            android:layout_marginTop="@dimen/common_padding_distance"
            android:layout_toRightOf="@+id/rb_comment_item_2"
            android:text="(18条评价)"
            android:textColor="@color/common_InputBox"
            android:textSize="@dimen/common_DialogContent_21px" />


        <TextView
            android:id="@+id/tv_charge_item_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rb_comment_item_2"
            android:layout_marginTop="@dimen/common_padding_distance"
            android:text="¥20.00"
            android:textColor="@color/common_red"
            android:textSize="@dimen/common_InputBox_28px" />


        <TextView
            android:id="@+id/tv_num_item_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/fl_image_bg"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tv_charge_item_2"
            android:text="x 3"
            android:textColor="@color/common_blue"
            android:textSize="@dimen/common_InputBox_28px" />


    </RelativeLayout>


</RelativeLayout>